<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateCardActivity">
    <TextView
        android:id="@+id/updateTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Title"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/updateTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateTitleTextView"
        android:text="Title"
        android:layout_marginHorizontal="20dp"
        />
    <TextView
        android:id="@+id/updateBodyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateTitleEditText"
        android:text="Edit Card Content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/updateBodyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateBodyTextView"
        android:text="Content"
        android:layout_marginHorizontal="20dp"
        />

</RelativeLayout>